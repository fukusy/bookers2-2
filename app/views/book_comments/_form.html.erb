
<%= form_with(model: [book, comment], url: book_book_comments_path(@book) ) do |f| %>
  <div class="form-group">
   <label for="book_comment"></label>
      <%= f.text_area :comment, class: "form-control", rows: "5", placeholder: "コメントここに" %>
  </div>
  <div class="form-group">
    <%= f.submit '送信' %>
  </div>
<% end %>